{
  "name": "nok-2025-v1",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postbuild": "xcopy build\\*.* . /E /H /Y",
    "build": "wp-scripts build --output-path=build",
    "start": "wp-scripts start --output-path=build",
    "css:build": "sass assets/css/nok-components.scss assets/css/nok-components.css --style=expanded --source-map",
    "css:min": "csso assets/css/nok-components.css -o assets/css/nok-components.min.css --source-map assets/css/nok-components.min.css.map",
    "css:critical": "sass assets/css/nok-critical.scss assets/css/nok-critical.css --style=compressed --no-source-map",
    "css:all": "npm run css:build && npm run css:min && npm run css:critical",
    "icons:normalize": "node normalize-icons.js",
    "icons:watch": "nodemon --watch assets/icons-source --ext svg --exec npm run icons:normalize"
  },
  "devDependencies": {
    "@wordpress/scripts": "^30.25.0",
    "autoprefixer": "^10.4.20",
    "csso": "^5.0.5",
    "csso-cli": "^4.0.2",
    "google-closure-compiler": "^20240317.0.0",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "sass": "^1.83.4",
    "svgo": "^4.0.0"
  },
  "dependencies": {
    "@wordpress/data": "^10.32.0",
    "@wordpress/dom-ready": "^4.32.0",
    "@wordpress/icons": "^11.0.0"
  }
}
